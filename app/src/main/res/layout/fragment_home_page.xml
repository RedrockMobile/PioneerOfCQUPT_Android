<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/Carousel_figure"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:rollviewpager_play_delay="3000" />
    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:layout_below="@+id/Carousel_figure"-->
    <!--&gt;-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.v7.widget.CardView
            android:id="@+id/button_party_rules_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_party_rules"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_party_rules" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_party_rules"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="学党章党规" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_series_speech_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_series_speech"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_series_speech" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_series_speech"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="学系列讲话" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_qualified_members_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_qualified_members"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_qualified_members" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_qualified_members"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="做合格党员" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="1dp">

        <android.support.v7.widget.CardView
            android:id="@+id/button_internet_activity_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_internet_activity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_internet_activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_internet_activity"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="网络活动" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_advanced_model_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_advanced_model"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_advanced_model" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_advanced_model"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="先进典型" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_classic_movie_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_classic_movie"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_classic_movie" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_classic_movie"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="经典影像" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>