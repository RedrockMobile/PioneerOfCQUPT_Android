<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/Carousel_figure"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="false">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/Carousel_figure"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:rollviewpager_play_delay="3000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.v7.widget.CardView
            android:id="@+id/button_party_rules_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_party_rules"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_party_rules" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_party_rules"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="学党章党规" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_series_speech_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_series_speech"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_series_speech" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_series_speech"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="学系列讲话" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_qualified_members_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_qualified_members"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_qualified_members" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_qualified_members"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="做合格党员" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="1dp">

        <android.support.v7.widget.CardView
            android:id="@+id/button_internet_activity_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_internet_activity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_internet_activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_internet_activity"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="网络活动" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_advanced_model_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_advanced_model"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_advanced_model" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_advanced_model"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="先进典型" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_classic_movie_c"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_classic_movie"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/homepage_classic_movie" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_classic_movie"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="经典影像" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/about_link_font"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView" />
            <ImageView
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="#cccccc"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:id="@+id/iv_divider_about_link" />
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:src="@drawable/about_link"
                android:layout_alignBottom="@+id/tv1"
                android:layout_toRightOf="@+id/iv_divider_about_link"
                android:layout_toEndOf="@+id/iv_divider_about_link" />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共产党员学习教育网"
                android:textColor="@drawable/textview_selecter"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/iv_divider_about_link"
                android:layout_toRightOf="@+id/iv_1"
                android:layout_toEndOf="@+id/iv_1" />

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:src="@drawable/about_link"
                android:layout_alignBottom="@+id/tv2"
                android:layout_toRightOf="@+id/iv_divider_about_link"
                android:layout_toEndOf="@+id/iv_divider_about_link" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七一网学习教育网"
                android:textColor="@drawable/textview_selecter"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tv1"
                android:layout_alignStart="@+id/tv1" />
            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:src="@drawable/about_link"
                android:layout_alignTop="@+id/tv3"
                android:layout_alignLeft="@+id/iv_2"
                android:layout_alignStart="@+id/iv_2" />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆市教育系统学习教育网"
                android:textColor="@drawable/textview_selecter"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/iv_divider_about_link"
                android:layout_alignLeft="@+id/tv2"
                android:layout_alignStart="@+id/tv2" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>
